<UserControl x:Class="Top.Client.BizControls.CtrlShopSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="Nick:"></TextBlock>
            <TextBox x:Name="txtNick" Width="160"></TextBox>
            <Button Content="Search" Click="Search_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
